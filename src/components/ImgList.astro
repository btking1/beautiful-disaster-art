---
import { Image, Picture } from "@astrojs/image/components";

import hearme from "../../public/assets/hearme.jpg";
import her from "../../public/assets/her.jpg";
import muva from "../../public/assets/muva.jpg";
import passion from "../../public/assets/passion.jpg";

export interface Props {
  amount: number;
  ratio?: number;
  radius: boolean;
}

type Imag = {
  src: string;
  alt: string;
  title: string;
};

let { amount, ratio = 16, radius } = Astro.props;

const images: Imag[] = [
  {
    src: hearme,
    alt: "paiting titled hear me",
    title: "hear me",
  },
  { src: her, alt: "painting titled her", title: "her" },
  { src: muva, alt: "painting titled muva", title: "muva" },
  {
    src: passion,
    alt: "painting titled passion",
    title: "passion",
  },
];
let imgAmount = images.slice(0, amount);
let isRadius = radius ? "1%" : "0";
---

{
  imgAmount.length > 1 ? (
    imgAmount.map((image, amount, ratio) => (
      <Image
        style={{ borderRadius: isRadius }}
        src={image.src}
        alt={image.alt}
        data-title={`${image.title}`}
        width={1400}
        height={1400}
        aspectRatio={"1:1"}
        format="jpg"
      />
    ))
  ) : (
    <Image
      src={images[0].src}
      alt={images[0].alt}
      data-title={`${images[0].title}`}
      width={1440}
      height={1440}
      aspectRatio={"1:1"}
      format="jpg"
    />
  )
}
<script>
  const imgList = document.querySelector("#img-list");
  const image = imgList.children;
  const handleLoad = () => {
    for (let i = 0; i < image.length; i++) {
      image[i].classList.add("img-fade");
    }
  };
  window.addEventListener("load", handleLoad);
</script>
<style define:vars={{ isRadius }}>
  img {
    display: hidden;
    width: 100%;
    opacity: 0;
    transform: scale(1);
    filter: blur(2rem);
    transition: opacity 1s ease-in;
    transition: filter 1s ease-in;
  }
  .img-fade {
    display: block;
    opacity: 1;
    filter: blur(0rem);
  }
  img:hover {
    transform: scale(1.02);
    transition: transform 500ms ease-out;
    cursor: pointer;
  }
</style>
