---
import Layout from "../layouts/Layout.astro";
// import ImgList from "../components/ImgList.jsx";
import ImageFade from "../components/imgFade/ImageFade.tsx";
---

<Layout title="Beautiful Disaster Art">
  <main class="md:pt-8 md:flex flex-col relative md:justify-center">
    <div class="md:flex w-full justify-center">
      <ImageFade client:only />
    </div>

    <div class="md:flex md:w-full justify-center">
      <p class="p-3 text-center md:tracking-widest lg:text-lg md:max-w-[50vw]">
        Welcome to <span>Beautiful Disaster</span> Art, where my art is <span
          >home</span
        >. I pour my <span>heart</span>
        and <span>soul</span> into each piece, capturing the <span>beauty</span>
        of the world. My goal is to <span>inspire</span> and bring <span
          >joy</span
        > to your life. <span>Thank you</span> for visiting and <span
          >supporting</span
        > me.
      </p>
    </div>
  </main>
</Layout>

<style>
  h1 {
    color: var(--accent-4);
    font-family: var(--inconsolata);
    font-weight: 400;
    font-size: var(--h1);
    text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  }

  h1 > span {
    color: var(--primary);
  }

  p {
    color: var(--accent-3);
    font-family: var(--athiti);
    font-size: var(--hero);
    font-style: normal;
    font-weight: 400;
  }
  img {
    display: none;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    display: block;
    cursor: pointer;
  }
  p > span {
    color: var(--primary-2);
  }
</style>
